                        <GroupBox  Grid.Column="0" Grid.Row="1" Header="Radial Basis Function" FontSize="16" FontWeight="Bold" BorderBrush="#FF420046" BorderThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="Resources/rbf.png"/>
