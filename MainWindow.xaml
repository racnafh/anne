<Window x:Class="anne.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:anne"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="655">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0,0" StartPoint="1,1">
                    <GradientStop Color="#FF62E418" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="500" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0">
                <Rectangle.Fill>
                    <ImageBrush ImageSource="pack://application:,,,/Resources/anne.png"/>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
        <TabControl Grid.Row="1" Name="MainFrame" BorderThickness="0">
            <TabItem Visibility="Collapsed">
                <StackPanel>
                    <Label Content="Content goes here..." />
                    <Button Click="SLP_Selection">SLP</Button>
                </StackPanel>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Click="Home_Selection">&lt;&lt;</Button>
                            <Label Content="SLP" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="50" />
                            <Button Click="MLP_Selection">&gt;&gt;</Button>
                        </StackPanel>
                        <Canvas Name="SLP_Canvas" Grid.Row="1" SizeChanged="SLP_Canvas_SizeChanged"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="100"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Left">
                            <Label Content="Info 1" />
                            <Label Content="Info 2" />
                            <Label Content="Info 3" />
                            <Label Content="Info 4" />
                            <Label Content="Info 5" />
                        </StackPanel>
                        <TabControl Grid.Row="1">
                            <TabItem Header="Training"></TabItem>
                            <TabItem Header="Test"></TabItem>
                            <TabItem Header="Play"></TabItem>
                        </TabControl>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Label Content="3.Content goes here..." />
            </TabItem>
            <TabItem Visibility="Collapsed">
                <Label Content="4.Content goes here..." />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
